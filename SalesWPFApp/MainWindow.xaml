<Window x:Class="SalesWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="200">
    <StackPanel>
        <Label Content="Sales Management System" HorizontalAlignment="Center" Margin="0,50,0,50"/>
        <Button Name="btnMember" Content="Show Member" Click="btnMember_Click"></Button>
        <Button Name="btnOrder" Content="Show Order" ></Button>
        <Button Name="btnProduct" Content="Show Product" ></Button>
    </StackPanel>
</Window>
